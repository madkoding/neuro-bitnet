# =============================================================================
# RAG Server Dockerfile
# Servidor inteligente de RAG con clasificación de consultas
# =============================================================================

FROM python:3.11-slim

# Evitar prompts interactivos
ENV DEBIAN_FRONTEND=noninteractive

# Instalar dependencias del sistema
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Crear usuario no-root
RUN useradd -m -s /bin/bash rag

# Crear directorios de trabajo
WORKDIR /app
RUN mkdir -p /home/rag/.neuro-bitnet/rag && chown -R rag:rag /home/rag

# Copiar requirements primero para cache de layers
COPY requirements.txt .

# Instalar dependencias Python
RUN pip install --no-cache-dir -r requirements.txt

# Copiar código fuente
COPY src/ ./src/
COPY presets/ ./presets/
COPY prompts/ ./prompts/

# Variables de entorno por defecto
ENV RAG_SERVER_PORT=8080
ENV RAG_LLM_URL=http://localhost:11435
ENV RAG_EMBEDDING_MODEL=minilm
ENV RAG_DATA_DIR=/home/rag/.neuro-bitnet/rag
ENV PYTHONPATH=/app

# Exponer puerto
EXPOSE 8080

# Healthcheck
HEALTHCHECK --interval=30s --timeout=10s --retries=3 \
    CMD curl -f http://localhost:${RAG_SERVER_PORT}/health || exit 1

# Cambiar a usuario no-root
USER rag

# Comando de inicio
CMD ["python", "-m", "src.server.rag_server"]
